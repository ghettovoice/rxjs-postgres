{
  "name": "rxjs-postgres",
  "version": "0.1.0",
  "description": "RxJs adapters and decorators for node-postgres",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "postinstall": "typings install",
    "test:compile": "tsc -p tsconfig-test.json",
    "test:remap-json": "remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
    "test:remap-html": "remap-istanbul -i coverage/coverage.json -o coverage/remap-report -t html",
    "test:remap-lcov": "remap-istanbul -i coverage/coverage.json -o coverage/lcov-remap.info -t lcovonly",
    "test:remap": "npm run test:remap-json && npm run test:remap-html  && npm run test:remap-lcov",
    "test:istanbul": "istanbul cover _mocha -- -u tdd 'tests-compiled/tests/**/*.js'",
    "test:coveralls": "cat coverage/lcov-remap.info | coveralls ",
    "test:cov": "rm -rf coverage && npm run test:compile && npm run test:istanbul && npm run test:remap && rm -rf tests-compiled",
    "test:mocha": "npm run test:compile && mocha -u tdd 'tests-compiled/tests/**/*.js' && rm -rf tests-compiled",
    "test": "npm run test:cov",
    "typings": "typings"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghettovoice/rxjs-postgres.git"
  },
  "keywords": [
    "rxjs",
    "postgres",
    "pg"
  ],
  "author": "Vladimir Vershinin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ghettovoice/rxjs-postgres/issues"
  },
  "homepage": "https://github.com/ghettovoice/rxjs-postgres",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/es6-shim": "^0.31.32",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.45",
    "@types/sinon": "^1.16.31",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "remap-istanbul": "^0.7.0",
    "sinon": "^1.17.6",
    "typescript": "^2.0.3",
    "typings": "^1.4.0"
  },
  "dependencies": {
    "pg": "^6.1.0",
    "pg-pool": "^1.5.0",
    "rx": "^4.1.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "types"
  ],
  "typings": "types/index"
}
