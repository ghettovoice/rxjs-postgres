{
  "name": "rxjs-postgres",
  "version": "0.1.0",
  "description": "RxJs adapters and decorators for node-postgres",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist",
    "test": "tests"
  },
  "scripts": {
    "babel": "babel",
    "build": "rm -rf dist && babel --source-maps -d dist src",
    "test:remap-json": "remap-istanbul -i coverage/coverage.json -o coverage/coverage-remap.json",
    "test:remap-html": "remap-istanbul -i coverage/coverage.json -o coverage/remap-report -t html",
    "test:remap-lcov": "remap-istanbul -i coverage/coverage.json -o coverage/lcov-remap.info -t lcovonly",
    "test:remap": "npm run test:remap-json && npm run test:remap-html  && npm run test:remap-lcov",
    "test:istanbul": "istanbul cover _mocha -- --require babel-register -u tdd 'tests/**/*.js'",
    "test:coveralls": "cat coverage/lcov-remap.info | coveralls ",
    "test:cover": "rm -rf coverage && npm run test:istanbul && npm run test:remap",
    "test:mocha": "mocha --require babel-register -u tdd 'tests/**/*.js'",
    "test": "npm run test:cover"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghettovoice/rxjs-postgres.git"
  },
  "keywords": [
    "rxjs-postgres",
    "rxjs",
    "postgres",
    "pg"
  ],
  "author": "Vladimir Vershinin <ghettovoice@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ghettovoice/rxjs-postgres/issues"
  },
  "homepage": "https://github.com/ghettovoice/rxjs-postgres",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "remap-istanbul": "^0.7.0"
  },
  "dependencies": {
    "pg": "^6.1.0",
    "pg-pool": "^1.5.0",
    "rx": "^4.1.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "types"
  ],
  "typings": "types/index"
}
