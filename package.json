{
  "name": "rxjs-postgres",
  "version": "0.1.0",
  "description": "RxJs adapters and decorators for node-postgres",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist",
    "test": "tests"
  },
  "scripts": {
    "compile": "rm -rf dist && babel --source-maps -d dist src",
    "test:db-deploy": "createdb -U postgres test && psql -t -U postgres -d test -f ./tests/test.sql",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls ",
    "test:cover": "rm -rf ./coverage && npm run lint && istanbul cover _mocha -- --require babel-register --check-leaks './tests/**/*.js'",
    "test:mocha": "mocha --require babel-register --check-leaks './tests/**/*.js'",
    "test": "npm run lint && npm run test:mocha",
    "doc": "rm -rf ./docs && esdoc -c ./esdoc.json",
    "doc:deploy": "gh-pages -d ./docs -m 'Generate new docs'",
    "lint": "eslint --ext .js ./src ./tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghettovoice/rxjs-postgres.git"
  },
  "keywords": [
    "rxjs-postgres",
    "rxjs",
    "postgres",
    "pg"
  ],
  "author": "Vladimir Vershinin <ghettovoice@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ghettovoice/rxjs-postgres/issues"
  },
  "homepage": "https://ghettovoice.github.io/rxjs-postgres/",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "coveralls": "^2.11.15",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "^3.11.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gh-pages": "^0.12.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.1.2",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "es6-error": "^4.0.0",
    "lodash.isfunction": "^3.0.8",
    "pg": "^6.1.0",
    "rxjs": "^5.0.0-rc.4",
    "stack-trace": "0.0.9"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src",
    "tests",
    "types"
  ],
  "typings": "types/index"
}
